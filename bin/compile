#!/usr/bin/env bash
set -euo pipefail

BUILD_DIR="$1"

SRC_DIR="$BUILD_DIR/.chrome-for-testing"
DEST_DIR="$BUILD_DIR/priv/.chrome-for-testing"

if [ -d "$SRC_DIR" ]; then
  mkdir -p "$DEST_DIR"
  cp -a "$SRC_DIR/." "$DEST_DIR/"
  echo "‚úÖ Copied Chrome into priv/.chrome-for-testing"

  # Remove the original to avoid double-counting in slug
  rm -rf "$SRC_DIR"
  echo "üßπ Removed original .chrome-for-testing from build root"
else
  echo "‚ö†Ô∏è  No .chrome-for-testing found in $BUILD_DIR ‚Äì skipping copy"
fi
